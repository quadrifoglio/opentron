#version 120

uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;

attribute vec3 position;
attribute vec4 color;
attribute vec2 tex;

varying vec4 outColor;
varying vec2 outTex;

void main() {
	outColor = color;
	outTex = tex;

	gl_Position = proj * view * model * vec4(position, 1.0);

	//gl_Position = vec4(position, 1.0);
}
